@model QuanLyNongTraiLonThit.TienIch.Chuong

@{
    ViewBag.Title = "Tạo mới chuồng nuôi ";
}

<h2>Tạo mới chuồng nuôi</h2>
<hr/>
<form action="/Chuongs/Create" method="post" class="row form-horizontal" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-8 offset-2 active">
        <div class="form-group">
            @Html.LabelFor(model => model.DayChuong, htmlAttributes: new { @class = "control-label col-md-8 text-capitalize active" })
            <div class="col-md-8">
                <select class="form-control" id="DayChuong" name="DayChuong">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                    <option value="G">G</option>
                    <option value="H">H</option>
                </select>
              
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TrangThai, htmlAttributes: new { @class = "control-label col-md-8 text-capitalize active" })
            <div class="col-md-8">
                @* @Html.EditorFor(model => model.TrangThai, new { htmlAttributes = new { @class = "form-control", @max = "2", @min = "0" , value = "0" } })*@
                <select class="form-control" id="TrangThai" name="TrangThai" value="0" disabled>
                    @{ int count = 0;}
                    @foreach (var item in Helper.trangThaiChuong)
                    {
                        <option value="@count">@item</option>
                        count++;
                    }
                </select>
                @Html.ValidationMessageFor(model => model.TrangThai, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
                <a class="btn btn-secondary" href="Index">Trở về</a>
            </div>
        </div>
    </div>
</form>
